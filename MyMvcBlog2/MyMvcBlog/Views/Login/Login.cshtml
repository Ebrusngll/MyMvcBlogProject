@model MyMvcBlog.Models.User 
@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/css/Login.css" rel="stylesheet" />
	<title>Login</title>
</head>
<body>
	<div style="padding-top:200px;" class="wrapper fadeInDown">
		<div id="formContent">

			<form asp-controller="Login" asp-action="UserControl">
				<div class="form-group">
					<input asp-for ="Mail" type="text" name="login" id="login" class="fadeIn second" placeholder="Email">
				</div>
				<div class="form-group">
					@*<a asp-controller="Login" asp-action="UserControl"> Log in</a>*@
					<input type="submit" class="fadeIn fourth" value="Log In">
				</div>
			</form>

		</div>
	</div>
</body>
</html>
