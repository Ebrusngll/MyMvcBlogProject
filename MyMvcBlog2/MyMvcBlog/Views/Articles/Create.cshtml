@model MyMvcBlog.Models.Article

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Article</h4>
<hr />
<link href="~/css/WriteAStoryPage.css" rel="stylesheet" />
<link href="~/bootstrap/bootstrap.min.css" rel="stylesheet" />
<meta charset="UTF-8">

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
<title>Write a Story</title>
<div class="container">
	<form asp-controller="Articles" asp-action="Create">
		<section class="title-banner py-4 bg-success text-white" id="title-banner">
			<div class="container">
				<div class="row">
					<h4>Draft in Ebru şengül</h4>
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-light" />
					</div>
				</div>
			</div>
		</section>

		<h1>Title</h1>
		@*<input asp-for="Title" id="formContent" class="popover-header" role="textbox" data-content="Title" contenteditable="true" />*@
		<textarea asp-for="Title" class="form-control" id="textAreaExample" rows="4" placeholder="Title" style="height:50px; resize:none"></textarea>
		<span asp-validation-for="Title"></span>
		<hr />
		<h1>Content</h1>
		<textarea asp-for="Content" class="form-control" id="summernote" rows="4" placeholder="Content" style="height:400px; resize:none"></textarea>
		<span asp-validation-for="Content"></span>
	</form>
</div>


<div>
	<a asp-action="Index">Back to List</a>
</div>
<script>
	$('#summernote').summernote({
		placeholder: 'Hello Bootstrap 4',
		tabsize: 2,
		height: 100
	});
</script>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
